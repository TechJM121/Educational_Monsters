{
  "name": "educational-rpg-tutor",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build && npm run optimize:assets",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --run --coverage",
    "test:unit": "vitest --run",
    "test:integration": "vitest --run src/test/integration/**/*.test.{ts,tsx}",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:accessibility": "vitest --run src/**/*.a11y.test.{ts,tsx}",
    "test:performance": "lighthouse http://localhost:4173 --output=json --output-path=./test-results/lighthouse.json",
    "test:security": "vitest --run src/test/security/**/*.test.{ts,tsx}",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:accessibility && npm run test:security",
    "test:ci": "npm run test:all && npm run test:e2e",
    "optimize:assets": "node scripts/optimize-assets.js",
    "backup:full": "node scripts/backup-strategy.js full",
    "backup:incremental": "node scripts/backup-strategy.js incremental",
    "backup:restore": "node scripts/backup-strategy.js restore",
    "backup:cleanup": "node scripts/backup-strategy.js cleanup",
    "security:audit": "node scripts/security-audit.js",
    "deploy:staging": "gh workflow run deploy.yml -f environment=staging",
    "deploy:production": "gh workflow run deploy.yml -f environment=production",
    "postbuild": "npm run security:audit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "framer-motion": "^12.23.12",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.8.4",
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.8.4",
    "cypress": "^13.6.4",
    "cypress-axe": "^1.5.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "jsdom": "^26.0.0",
    "lighthouse": "^11.4.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^2.1.8",
    "vitest-axe": "^0.1.0"
  }
}
